<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EA739C"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select country"
        android:textSize="30sp"
        android:textStyle="italic"
        android:layout_margin="2dp"
        android:paddingBottom="10dp"
        android:textColor="#170B0F"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp1"
        android:entries="@array/countries"></Spinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:paddingBottom="10dp"
        android:text="Select Gender"
        android:textColor="#231818"
        android:textSize="30sp"
        android:textStyle="italic" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp2"
        ></Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Favourite colour"
        android:textSize="30sp"
        android:layout_margin="2dp"
        android:paddingBottom="10dp"
        android:textStyle="italic"
        android:textColor="#C4100606"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp3"
        android:entries="@array/colour"
        ></Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Favourite Flower"
        android:textSize="30sp"
        android:layout_margin="2dp"
        android:paddingBottom="10dp"
        android:textStyle="italic"
        android:textColor="#C4100606"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp4"
        android:entries="@array/flower"
        ></Spinner>
</LinearLayout>